<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ConnectFormContainer"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    tools:context="com.example.fire_app.ConnectActivity" >

    <EditText
        android:id="@+id/ID_IP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/PROMPT_IP"
        android:inputType="number|text"
        android:maxLines="1"
        android:text="192.168.1.70"
        android:singleLine="true" />

    <EditText
        android:id="@+id/ID_PORT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/PROMPT_PORT"
        android:inputType="number"
        android:maxLines="1"
        android:text="11000"
        android:singleLine="true" />

    <Button
        android:id="@+id/BTN_CONNECT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/STR_CONNECT" />
</LinearLayout>